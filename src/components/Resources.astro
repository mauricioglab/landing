<style>
  .resources {
    padding: 2rem 0;
    background-color: white;
  }

  .featured-resources {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .resource-card.featured {
    background: linear-gradient(135deg, #F97316, #FB923C);
    color: white;
    transform: scale(1.02);
    border: none;
  }

  .resource-card.featured .resource-icon {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .resource-card.featured h3 {
    color: white;
  }

  .resource-card.featured p {
    color: rgba(255, 255, 255, 0.9);
  }

  .resource-card.featured .resource-link {
    color: white;
    font-weight: 600;
  }

  .resource-card.featured .resource-link:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  .testimonials {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .testimonial {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    border-left: 4px solid #2563EB;
  }

  .testimonial p {
    font-style: italic;
    color: #4B5563;
    margin-bottom: 1rem;
    font-size: 1.125rem;
  }

  .testimonial cite {
    color: #111827;
    font-weight: 600;
    font-style: normal;
    font-size: 0.95rem;
  }

  .expandable-resources {
    margin-top: 1.5rem;
  }

  .expand-btn {
    background: #f8fafc;
    border: 2px solid #e5e7eb;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
    color: #4B5563;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin: 0 auto 2rem;
    font-size: 1rem;
  }

  .expand-btn:hover {
    background: #e5e7eb;
    color: #111827;
  }

  .expand-btn i {
    transition: transform 0.3s ease;
  }

  .expand-btn.expanded i {
    transform: rotate(180deg);
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .resource-card {
    background: #f8fafc;
    padding: 2.5rem 2rem;
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .resource-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }

  .resource-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #F97316, #FB923C);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.75rem;
    color: white;
  }

  .resource-card h3 {
    color: #111827;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .resource-card p {
    color: #4B5563;
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .resource-link {
    color: #F97316;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .resource-link:hover {
    color: #EA580C;
  }

  .resource-link i {
    font-size: 0.75rem;
  }

  .hidden {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .resources {
      padding: 1.5rem 0;
    }
    
    .featured-resources {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .testimonials {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .resources-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .resource-card, .testimonial {
      padding: 1.5rem;
    }
    
    .expand-btn {
      padding: 0.875rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>

<script>
  // Expandable resources functionality
  document.addEventListener('DOMContentLoaded', function() {
    const expandBtn = document.getElementById('expandResources');
    const moreResources = document.getElementById('moreResources');
    
    if (expandBtn && moreResources) {
      expandBtn.addEventListener('click', function() {
        const isHidden = moreResources.classList.contains('hidden');
        
        if (isHidden) {
          moreResources.classList.remove('hidden');
          expandBtn.classList.add('expanded');
          expandBtn.querySelector('span').textContent = 'Ver menos recursos';
          
          // Smooth scroll to show the expanded content
          setTimeout(() => {
            moreResources.scrollIntoView({ 
              behavior: 'smooth', 
              block: 'nearest' 
            });
          }, 100);
        } else {
          moreResources.classList.add('hidden');
          expandBtn.classList.remove('expanded');
          expandBtn.querySelector('span').textContent = 'Ver m√°s recursos y experimentos';
        }
      });
    }
  });
</script>
